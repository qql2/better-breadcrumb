{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDeclarationOnly": true,
        "outFile": "./main.js",
        "forceConsistentCasingInFileNames": true,
    "jsx":"preserve",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "src/packageName.ts"
  ],
}
