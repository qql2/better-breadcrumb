{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
  },
  "include": [
    "src/**/*",
  ]
}
